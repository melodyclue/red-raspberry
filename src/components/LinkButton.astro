---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  newTab?: boolean;
}

const {
  href,
  className,
  ariaLabel,
  title,
  disabled = false,
  newTab = false,
} = Astro.props;

const aProps = newTab
  ? newTab && {
      rel: "noreferrer noopener",
      target: "_blank",
    }
  : {};
---

<a
  type="button"
  href={disabled ? "#" : href}
  tabindex={disabled ? "-1" : "0"}
  class={`group ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
  {...aProps}
>
  <slot />
</a>

<style>
  a {
    @apply hover:text-skin-accent;
  }
</style>
